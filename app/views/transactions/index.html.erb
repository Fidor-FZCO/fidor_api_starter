<div class="row justify-content-center">
  <div class="col-12 col-md-9 col-lg-7 col-xl-6">
    <table class="table table-striped">
      <colgroup>
        <col width="25%">
        <col width="45%">
        <col width="30%">
      </colgroup>
      <tr>
        <th>
          Date<br />
        </th>
        <th>
          Subject<br />
        </th>
        <th class="text-right">Amount</th>
      </tr>
      <% @transactions.each do |t| %>
        <tr>
          <td>
            <%= l t.created_at.to_datetime rescue "-" %><br />
          </td>
          <td>
            <%= t.subject %><br />
          </td>
          <td class="align-middle text-right"><%= format_currency t.amount %></td>
        </tr>
      <% end %>
    </table>

    <div class="my-5">
      <%= paginate @transactions %>
    </div>

  </div>
</div>
